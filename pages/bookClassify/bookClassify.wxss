@import "../../utils/wxss/bookPublic.wxss";

.bs-header{
  border-bottom: 1rpx solid #E6E6E6; 
}
.bs-header-delete {
  /* color: #888; */
}
.bc-section{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 30rpx 0rpx;
}
.bc-sec-list{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 680rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  color: #303030;
  /* border-bottom: 1rpx solid #E6E6E6; */
}
.bc-sec-list-text{
  margin-left: 30rpx;
  font-size: 30rpx;
}
.bc-sec-list-icon{
  position: absolute;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
}
.bc-sec-list-icon image{
  width: 40rpx;
  height: 40rpx;
}
.bc-sec-list-text-active{
  color: #22AAFF;
  border-radius: 8rpx;
  background-color: #F5F6F8;
}
.bc-sec-list-add{
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 680rpx;
  height: 80rpx;
  color: #22AAFF;
  margin-top: 10rpx;
  border-top: 1rpx solid #E6E6E6;
  border-bottom: 1rpx solid #E6E6E6;
}
.bc-sec-list-edit{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 680rpx;
  height: 80rpx;
  color: #22AAFF;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #E6E6E6;
}
.bc-sec-list-edit-input{
  width: 520rpx;
  height: 60rpx;
  margin: 0 30rpx;
}
.bc-sec-list-edit-input input{
  width: 520rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  margin: 0;
  font-size: 30rpx;
  color: #303030;
}
.bc-sec-list-edit-button{
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #FFF;
  border-radius: 5rpx;
  background-color: #22AAFF;
}